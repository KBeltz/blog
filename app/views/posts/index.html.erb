<p id="notice"><%= notice %></p>

<%= image_tag("unicorn-galaxy.gif") %>
<%= link_to "Image Credit", "http://amylovespenguins.deviantart.com/" %>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.date %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
